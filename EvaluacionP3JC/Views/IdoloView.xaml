<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:EvaluacionP3JC.ViewModel"
             x:Class="EvaluacionP3JC.Views.FavoriteCharacterView"
             Title="Favorite Character">

    <ContentPage.BindingContext>
        <local:FavoriteCharacterViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="20">
        <Image Source="{Binding FavoriteCharacter.ImageUrl}" WidthRequest="300" HeightRequest="300" />

        <Entry Placeholder="Ingrese su descripción aquí..."
               Text="{Binding FavoriteCharacter.Description}"
               VerticalOptions="EndAndExpand" />

        <Button Text="Guardar Descripción"
                Command="{Binding GuardarDescripcionCommand}"
                VerticalOptions="End"
                HorizontalOptions="Center" />
    </StackLayout>

</ContentPage>